<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bcakground2"
    tools:context=".ui.fragment.UserCycle.ConfirmationCodeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/ConfiPass_Frg_Image"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/ConfiPass_Frg_Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ConfiPass_Frg_Image"
            android:layout_marginTop="10dp"
            android:text="@string/codePassChange"
            android:textAlignment="center"
            android:textColor="@color/colorBlueDark"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <EditText

            android:id="@+id/ConfiPass_Frg_Ed_Code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ConfiPass_Frg_Tv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corner"
            android:hint="@string/comfirmationCode"
            android:paddingEnd="10dp"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/ConfiPass_Frg_Ed_Password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ConfiPass_Frg_Ed_Code"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corner"
            android:hint="@string/newPass"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/ConfiPass_Frg_Ed_PasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ConfiPass_Frg_Ed_Password"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corner"
            android:hint="@string/confirmNewPass"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/ConfiPass_Frg_Btn_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ConfiPass_Frg_Ed_PasswordAgain"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/colorGreenAccent3"
            android:text="تغير كلمة المرور"
            android:textColor="@color/colorGreyLighten5"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>


</FrameLayout>