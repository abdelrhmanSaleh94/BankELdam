<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/countact_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/ic_logo" />

            <LinearLayout
                android:id="@+id/textInfo"
                android:layout_width="match_parent"
                android:layout_below="@id/countact_logo"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin20"
                    android:drawableEnd="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:text="@string/Phone"
                    android:textColor="@color/colorBlueDark"
                    android:textSize="@dimen/font18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin20"
                    android:drawableEnd="@drawable/ic_contact_us"
                    android:drawablePadding="10dp"
                    android:text="@string/email"
                    android:textColor="@color/colorBlueDark"
                    android:textSize="@dimen/font18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Logos_Contact_Liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textInfo"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginEnd="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10">

                <ImageView
                    android:id="@+id/contact_facebook"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_ico_facebook" />

                <ImageView
                    android:id="@+id/contact_inst"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_ico_instgram" />

                <ImageView
                    android:id="@+id/contact_twitter"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_ico_twitter" />

                <ImageView
                    android:id="@+id/contact_whatsApp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_ico_whatsapp" />

                <ImageView
                    android:id="@+id/contact_youtube"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_ico_youtube" />

                <ImageView
                    android:id="@+id/contact_google"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_ico_google" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Logos_Contact_Liner"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:background="@color/grayE"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlueDark"
                    android:gravity="center"
                    android:text="@string/contactUs"
                    android:textColor="@color/colorGreyLighten5"
                    android:textSize="@dimen/textSize20" />

                <EditText
                    android:id="@+id/contact_Ed_Name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:background="@drawable/rounded_corner"
                    android:hint="@string/name"
                    android:textDirection="rtl" />

                <EditText
                    android:id="@+id/contact_Ed_Email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:background="@drawable/rounded_corner"
                    android:hint="@string/email"
                    android:textDirection="rtl" />

                <EditText
                    android:id="@+id/contact_Ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:background="@drawable/rounded_corner"
                    android:hint="@string/Phone"
                    android:textDirection="rtl" />

                <EditText
                    android:id="@+id/contact_Ed_Tittle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:background="@drawable/rounded_corner"
                    android:hint="@string/tittleMassage"
                    android:textDirection="rtl" />

                <EditText
                    android:id="@+id/contact_Ed_Massage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:background="@drawable/rounded_corner"
                    android:hint="@string/massageText"
                    android:gravity="top"
                    android:textDirection="rtl" />

                <Button
                    android:id="@+id/contact_Btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10"
                    android:background="@drawable/round_button_darkblue"
                    android:text="@string/send"
                    android:textColor="@color/grayE" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>